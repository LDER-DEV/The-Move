<%- include('partials/header') -%>
<%- include('partials/navbar') -%>

<div class="container">
  <div class="col-12 col-lg-8 justify-content-center mt-5">
    <img class="img-fluid" src="<%= profile.bannerPicture %>">
  </div>
  <div class="row mt-5">
      <div class="col-6">
          <div>
          
              <p><strong>User Name</strong>: <%= profile.userName %></p>
              <p><strong>Email</strong>: <%= profile.email %></p>
              <div class="col-2 justify-content-between mt-5">
               <img class="img-fluid" src="<%= profile.profilePicture %>">
              </div>
              <a href="/logout" class="col-3 btn btn-primary">Logout</a>
          </div>
          <div class="mt-5">
            <% if (profile.isVenue === 'Yes') { %>

            <h2>Add a post</h2>
            <form action="/moves/createPost" enctype="multipart/form-data" method="POST">
              <div class="mb-3">
                  <label for="title" class="form-label">Title</label>
                  <input type="text" class="form-control" id="eventTitle" name="eventTitle">
              </div>
              <div class="mb-3">
                <input type="text" class="hidden" id="venueName" name="venueName"  value="<%= profile.userName %>">
            </div>
              <div class="mb-3">
                <label for="description" class="form-label">Event Description</label>
                <textarea class="form-control" id="description" name="description"></textarea>
              </div>
              <div class="mb-3">
                <label for="imgUpload" class="form-label">Image</label>
                <input type="file" class="form-control" id="imageUpload" name="file">
              </div>
              <div class="mb-3">
                <label for="startDateTime" class="form-label">Event Start Date and Time</label>
                <input type="date" class="form-control" id="startDate" name="startDate">
                <input type="time" class="form-control" id="startTime" name="startTime">
              </div>
              
              <div class="mb-3">
                <label for="endDateTime" class="form-label">Event End Date and Time</label>
                <input type="date" class="form-control" id="endDate" name="endDate">
                <input type="time" class="form-control" id="endTime" name="endTime">
              </div>
              
              <button type="submit" class="btn btn-primary" value="Upload">Submit</button>
            </form>
            <% } %>
          </div>
      </div>
      <div class="col-6">
        <ul class="row list-unstyled">
        
        <% for(var i=0; i< moves.length; i++)
         {%>
          <li class="col-6 justify-content-between mt-5">
            <a href="/moves/<%= moves[i]._id%>">
              <img class="img-fluid" src="<%= moves[i].image%>">
            </a>
            <span>Title:</span>
            <h2><%= moves[i].eventTitle %></h2>
            <p>Description: </p>
            <p><%= moves[i].description %></p>
            <span> When: </span></br>
            <span><%= moves[i].startDate %></span>
            <span><%= moves[i].startTime %></span>
            <span> Where: </span></br>
            <a href="/profile/<%= moves[i].venueName %>"><span> <%= moves[i].venueName %>
          </li>
        <% } %>
    
        </ul>
        <div class="row justify-content-center mt-5">
          <a class="btn btn-primary" href="/feed">Return to Feed</a>
        </div>  
      </div>  
      <div class="col-6">

        <div class="mt-5">
          <% if (profile.isVenue === 'No') { %>
            <h2>Upload a Song</h2>
            <form action="/moves/addTrack" enctype="multipart/form-data" method="POST">
              <div class="mb-3">
                <label for="trackName" class="form-label">Song Title</label>
                <input type="text" class="form-control" id="trackName" name="trackName">
              </div>
              <div class="mb-3">
                <input class="hidden"  type="text" class="form-control" id="uploadedBy" name="uploadedBy"value="<%= profile.userName %>">
              </div>
              <div class="mb-3">
                <label for="songUpload" class="form-label">Please upload your Songs</label>
                <input type="file" class="form-control" id="songUpload" name="songFile">
              </div>
              <button type="submit" class="btn btn-primary" value="Upload">Submit</button>
            </form>
          <% } %>
        </div>
    </div>
    </div>
  </div>
</div>
<%- include('partials/footer') -%>